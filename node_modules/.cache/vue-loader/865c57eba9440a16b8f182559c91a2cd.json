le from 'comfortable-javascript';\n  import { comfortable } from '@/comfortable.js'\n  import _ from 'lodash';\n\n  export default {\n    name: 'document',\n    data() {\n      return {\n        document: null,\n        author: null,\n      }\n    },\n    methods: {\n      getPost() {\n        const options = {\n          embedAssets: true,\n          includes: 1,\n          filters: new Comfortable.Filter()\n            .addAnd('slug', 'equal', this.$route.params.slug)\n        };\n\n        comfortable.getDocuments(options)\n        .then(result => {\n          this.document = result.data[0];\n          this.author = _.find(result.includes.author, { meta: { id: this.document.fields.author[0].meta.id } });\n        })\n        .catch(err => {\n          throw err;\n        })\n      }\n    },\n    created() {\n      this.getDocument();\n    }\n  }\n</script>\n\n<style>\n  .post .image{\n    width: 100%;\n  }\n\n  .post .image img{\n    width: 100%;\n  }\n\n  .post .author img {\n    margin-top: 10px;\n  }\n\n  .post .author img {\n    display: inline-block;\n    margin-bottom: -8px;\n    margin-right: 10px;\n    border-radius: 50%;\n  }\n</style>"]}]}